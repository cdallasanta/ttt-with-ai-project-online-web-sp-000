#!/usr/bin/env ruby

require_relative '../config/environment'

def play_a_game
  puts "Welcome to CLI Tic-Tac-Toe!"
  puts "How many human players will there be? (0-2)"
  number_of_humans = gets.chomp

  if number_of_humans.to_i == 0 || number_of_humans == 'wargame'
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
  elsif number_of_humans.to_i == 1
    puts "Which player ('human' or 'comp') will go first?"
    first_player = gets.chomp until first_player == 'comp' || first_player == 'human'
    if first_player == 'human'
      game = Game.new(Players::Human.new("X"), Players::Computer.new("O"))
    else
      game = Game.new(Players::Computer.new("X"), Players::Human.new("O"))
    end
  else number_of_humans.to_i == 2
    game = Game.new(Players::Human.new("X"), Players::Human.new("O"))
  end

  if number_of_humans != 'wargame'
    game.play
  else
    score = [0,0,0]
    100.times do
      winner = game.play
      if winner == "X"
        score[0] += 1
      elsif winner == "O"
        score[1] += 1
      else
        score[2] += 1
      end
      puts "Results: X - #{score[0]}, O - #{score[1]}, D - #{score[2]}"
    end

  puts "Would you like to play again? (yes/exit)"
  input = gets.chomp
  if input == "yes"
    play_a_game
  end
end

play_a_game
